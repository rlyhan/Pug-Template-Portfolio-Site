extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 Projects

      p.lead.text-light
        | A portfolio consisting of the web projects that I have worked on.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each proj in projects
        .cell
          a(href=`/project_${proj.id}`)
            .project-container
              img.thumbnail(src=`static/${proj.image_urls[0]}`)
              .thumbnail-overlay
            h5 #{proj.project_name}
